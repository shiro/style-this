{
  "name": "@style-this/core",
  "version": "0.1.3",
  "description": "CSS-in-JS library for the modern web - core module",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./compiler": {
      "require": "./dist/compiler.cjs",
      "types": "./dist/compiler.d.cts",
      "import": "./dist/compiler.cjs",
      "default": "./dist/compiler.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pnpm build:native && pnpm build:js",
    "build:dev": "pnpm build:native:dev && pnpm build:js",
    "build:native": "cd native && wasm-pack build -t web --release && wasm-opt -O2 pkg/style_this_bg.wasm -o pkg/style_this_bg.wasm",
    "build:native:dev": "cd native && wasm-pack build -t web",
    "build:js": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "lint:fix": "pnpm lint --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@vitest/eslint-plugin": "1.4.1",
    "eslint": "9.39.1",
    "tsdown": "0.16.1",
    "typescript-eslint": "8.46.3",
    "vitest": "4.0.8"
  },
  "dependencies": {
    "@rollup/plugin-wasm": "6.2.2"
  }
}

